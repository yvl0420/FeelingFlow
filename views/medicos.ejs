<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FeelingFlow - Buscar Médicos</title>

    <!-- Iconos FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="/css/medicos.css">
</head>
<body>
    <nav>
        <div class="container">
            <a class="navbar-brand" href="/">FeelingFlow</a>
            <div class="navbar-links">
                <a href="/">Inicio</a>
                <a href="/panel">Panel</a>
                <a href="/mis-citas">Mis Citas</a>
                <button id="cerrarSesion" class="btn btn-link">Cerrar Sesión</button>
            </div>
        </div>
    </nav>

    <!-- Contenido Principal -->
    <div class="container">
        <h2>Buscar Médicos</h2>

        <!-- Filtros de Búsqueda -->
        <form action="/medicos" method="GET">
            <div class="form-group">
                <label class="form-label">Especialidad</label>
                <select name="especialidad">
                    <option value="">Todas</option>
                    <option value="Cardiología" <%= especialidad === 'Cardiología' ? 'selected' : '' %>>Cardiología</option>
                    <option value="Dermatología" <%= especialidad === 'Dermatología' ? 'selected' : '' %>>Dermatología</option>
                    <option value="Pediatría" <%= especialidad === 'Pediatría' ? 'selected' : '' %>>Pediatría</option>
                    <option value="Oftalmología" <%= especialidad === 'Oftalmología' ? 'selected' : '' %>>Oftalmología</option>
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Ubicación</label>
                <input type="text" name="ubicacion" placeholder="Ciudad o dirección" value="<%= ubicacion || '' %>">
            </div>

            <div class="form-group">
                <button type="submit" class="btn">
                    <i class="fa fa-search"></i> Buscar
                </button>
            </div>
        </form>

        <!-- Tabla de Médicos -->
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Especialidad</th>
                    <th>Ubicación</th>
                    <th>Calificación</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if (medicos.length > 0) { %>
                    <% medicos.forEach(medico => { %>
                        <tr>
                            <td><%= medico.especialidad %></td>
                            <td><%= medico.ubicacion %></td>
                            <td><%= medico.calificacion %>/5 ⭐</td>
                            <td>
                                <a href="/horarios/<%= medico.id %>">
                                    <i class="fa fa-clock"></i> Ver Horarios
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center text-muted">No se encontraron médicos.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <!-- Paginación -->
        <% if (totalPaginas > 1) { %>
            <nav>
                <ul class="pagination">
                    <% for (let i = 1; i <= totalPaginas; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>&especialidad=<%= especialidad || '' %>&ubicacion=<%= ubicacion || '' %>">
                                <%= i %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>

    <!-- Logout con Fetch -->
    <script>
        document.getElementById("cerrarSesion").addEventListener("click", () => {
            fetch("/logout", { method: "POST" })
                .then(() => window.location.href = "/");
        });
    </script>
</body>
</html>
