<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Citas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">FeelingFlow</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/panel">Panel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/medicos">Buscar Médicos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/mis-citas">Ver Mis Citas</a>
                    </li>
                    <li class="nav-item">
                        <form action="/logout" method="post">
                            <button class="btn btn-link nav-link" type="submit">Cerrar Sesión</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h2 class="text-center">Mis Citas</h2>
        <div class="list-group">
            <% if (citas && citas.length > 0) { %>
                <% citas.forEach(cita => { %>
                    <div class="card mb-4" id="cita-<%= cita.id %>">
                        <div class="card-body">
                            <h5 class="card-title">Dr. <%= cita.Medico.Usuario.nombre %> <%= cita.Medico.Usuario.apellido %></h5>
                            <p class="card-text">Especialidad: <%= cita.Medico.especialidad %></p>
                            <p class="card-text">Fecha: <%= cita.Horario.fecha %></p>
                            <p class="card-text">Hora: <%= cita.Horario.hora_inicio %> - <%= cita.Horario.hora_fin %></p>
                
                            <!-- Botón para abrir el modal de reprogramación -->
                            <button class="btn btn-primary" onclick="abrirModalReprogramar(<%= cita.id %>)">Reprogramar cita</button>

                            <!-- Botón para cancelar cita -->
                            <button class="btn btn-danger" onclick="cancelarCita(<%= cita.id %>)">Cancelar cita</button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center">No tienes citas programadas.</p>
            <% } %>
        </div>
    </div>

    <!-- Modal de reprogramación -->
    <div class="modal fade" id="reprogramarModal" tabindex="-1" role="dialog" aria-labelledby="reprogramarModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reprogramarModalLabel">Reprogramar Cita</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formReprogramar" action="" method="POST">
                        <input type="hidden" id="citaId" name="citaId">
                        
                        <div class="form-group">
                            <label for="nuevoHorario">Selecciona un nuevo horario:</label>
                            <select class="form-control" name="nuevoHorarioId" id="nuevoHorario">
                                <!-- Opciones de horarios disponibles se cargarán aquí -->
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Reprogramar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Cancelación -->
    <div class="modal fade" id="confirmarCancelacionModal" tabindex="-1" aria-labelledby="confirmarCancelacionModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmarCancelacionModalLabel">Confirmar Cancelación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>¿Estás seguro de que deseas cancelar esta cita?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-danger" id="confirmarCancelacionBtn">Sí, Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Éxito -->
    <div class="modal fade" id="exitoModal" tabindex="-1" aria-labelledby="exitoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exitoModalLabel">Cita Cancelada</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Su cita ha sido cancelada con éxito.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="aceptarExitoBtn">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Reprogramación Exitosa -->
    <div class="modal fade" id="reprogramacionExitoModal" tabindex="-1" aria-labelledby="reprogramacionExitoModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="reprogramacionExitoModalLabel">Cita Reprogramada</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Su cita ha sido reprogramada con éxito.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal" id="aceptarReprogramacionExitoBtn">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function cancelarCita(citaId) {
            var confirmarCancelacionModal = new bootstrap.Modal(document.getElementById('confirmarCancelacionModal'));
            confirmarCancelacionModal.show();

            document.getElementById('confirmarCancelacionBtn').onclick = function() {
                confirmarCancelacionModal.hide();
                fetch(`/cancelar-cita/${citaId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var exitoModal = new bootstrap.Modal(document.getElementById('exitoModal'));
                        exitoModal.show();
                        document.getElementById('aceptarExitoBtn').onclick = function() {
                            exitoModal.hide();
                            document.getElementById(`cita-${citaId}`).remove(); // Elimina la cita sin recargar
                        };
                    } else {
                        var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                        errorModal.show();
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                    errorModal.show();
                });
            };
        }

        function abrirModalReprogramar(citaId) {
            document.getElementById('formReprogramar').action = `/reprogramar-cita/${citaId}`;
            document.getElementById('citaId').value = citaId;

            // Limpiar las opciones anteriores
            var select = document.getElementById('nuevoHorario');
            select.innerHTML = '';

            // Obtener los horarios disponibles desde el servidor
            fetch(`/horarios-disponibles/${citaId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        data.horarios.forEach(horario => {
                            var option = document.createElement('option');
                            option.value = horario.id;
                            option.textContent = `${horario.fecha} - ${horario.hora_inicio} - ${horario.hora_fin}`;
                            select.appendChild(option);
                        });
                    } else {
                        var option = document.createElement('option');
                        option.disabled = true;
                        option.textContent = 'No hay horarios disponibles';
                        select.appendChild(option);
                    }
                })
                .catch(error => {
                    console.error('Error al obtener los horarios disponibles:', error);
                    var option = document.createElement('option');
                    option.disabled = true;
                    option.textContent = 'Error al cargar los horarios';
                    select.appendChild(option);
                });

            var modal = new bootstrap.Modal(document.getElementById('reprogramarModal'));
            modal.show();
        }

        document.getElementById('formReprogramar').onsubmit = function(event) {
            event.preventDefault();
            var citaId = document.getElementById('citaId').value;
            var nuevoHorarioId = document.getElementById('nuevoHorario').value;

            fetch(`/reprogramar-cita/${citaId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: new URLSearchParams({
                    nuevoHorarioId: nuevoHorarioId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    var reprogramacionExitoModal = new bootstrap.Modal(document.getElementById('reprogramacionExitoModal'));
                    reprogramacionExitoModal.show();
                    document.getElementById('aceptarReprogramacionExitoBtn').onclick = function() {
                        reprogramacionExitoModal.hide();
                        location.reload(); // Recargar la página para actualizar la lista de citas
                    };
                } else {
                    var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                    errorModal.show();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
                errorModal.show();
            });
        };
    </script>
</body>
</html>